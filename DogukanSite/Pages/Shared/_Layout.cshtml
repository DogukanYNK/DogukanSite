@inject Microsoft.AspNetCore.Identity.SignInManager<ApplicationUser> SignInManager
@inject Microsoft.AspNetCore.Identity.UserManager<ApplicationUser> UserManager
@using DogukanSite.Models


@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Xsrf
@functions {
    public string GetAntiXsrfRequestToken()
    {
        return Xsrf.GetAndStoreTokens(ViewContext.HttpContext).RequestToken;
    }
}
@{
    // Sepet sayısı için C# koduna gerek yok, JS hallediyor.
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="RequestVerificationToken" content="@GetAntiXsrfRequestToken()">
    <title>@ViewData["Title"] - DogukanStore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DogukanSite.styles.css" asp-append-version="true" />

    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header class="site-header sticky-top bg-white shadow-sm">
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container">
                <a class="navbar-brand order-lg-0" asp-area="" asp-page="/Index">
                    <span class="logo-text">DogukanStore</span>
                </a>

                <button class="navbar-toggler order-lg-3 ms-auto ms-lg-0" type="button" data-bs-toggle="offcanvas" data-bs-target="#mainOffcanvas"
                        aria-controls="mainOffcanvas" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="d-none d-lg-flex align-items-center order-lg-2 desktop-icon-group">
                    <ul class="navbar-nav flex-row">
                        <li class="nav-item">
                            <a href="#" class="nav-link px-2" id="desktopSearchIconLink" data-bs-toggle="modal" data-bs-target="#searchModal" title="Ara">
                                <i class="fas fa-search"></i>
                            </a>
                        </li>
                        <li class="nav-item ms-2">
                            <a class="nav-link position-relative px-2" asp-area="" asp-page="/Cart/Index" title="Sepetim">
                                <i class="fas fa-shopping-bag"></i>
                                <span class="badge rounded-pill bg-primary position-absolute top-0 start-100 translate-middle d-none"
                                      id="cartItemCountLayoutDesktop">0</span>
                            </a>
                        </li>
                        @if (SignInManager.IsSignedIn(User))
                        {
                            var currentUser = await UserManager.GetUserAsync(User);
                            <li class="nav-item dropdown ms-2">
                                <a class="nav-link dropdown-toggle user-avatar-link px-2"
                                   href="#" id="userDropdownDesktop" role="button" data-bs-toggle="dropdown" aria-expanded="false" title="Hesabım">
                                    <i class="fas fa-user-circle"></i>
                                    <span class="ms-1">@(currentUser?.FirstName ?? UserManager.GetUserName(User))</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdownDesktop">
                                    <li><a class="dropdown-item" asp-page="/Account/Dashboard"><i class="fas fa-tachometer-alt me-2"></i>Hesabım Paneli</a></li>
                                    <li><a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index"><i class="fas fa-user-edit me-2"></i>Profil Ayarları</a></li>
                                    <li><a class="dropdown-item" asp-page="/Order/History"><i class="fas fa-receipt me-2"></i>Siparişlerim</a></li>
                                    <li><a class="dropdown-item" asp-page="/Account/Favorites"><i class="fas fa-heart me-2"></i>Favorilerim</a></li>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item" asp-page="/Admin/Index"><i class="fas fa-user-shield me-2"></i>Admin Paneli</a></li>
                                    }
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })" method="post">
                                            <button type="submit" class="dropdown-item text-danger"><i class="fas fa-sign-out-alt me-2"></i>Çıkış Yap</button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item ms-2"><a class="nav-link px-2" asp-area="Identity" asp-page="/Account/Login">Giriş Yap</a></li>
                            <li class="nav-item ms-2"><a class="btn btn-outline-primary btn-sm" asp-area="Identity" asp-page="/Account/Register">Kayıt Ol</a></li>
                        }
                    </ul>
                </div>

                <div class="collapse navbar-collapse order-lg-1" id="desktopNavLinks">
                    <ul class="navbar-nav mx-auto">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Index" ? "active" : "")" asp-area="" asp-page="/Index">Ana Sayfa</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="categoriesDropdownDesktop" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Kategoriler
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="categoriesDropdownDesktop">
                                <li><a class="dropdown-item" asp-page="/Products/Index" asp-route-category="Elektronik">Elektronik</a></li>
                                <li><a class="dropdown-item" asp-page="/Products/Index" asp-route-category="Giyim">Giyim</a></li>
                                <li><a class="dropdown-item" asp-page="/Products/Index" asp-route-category="EvDekorasyon">Ev & Dekorasyon</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" asp-page="/Products/Index">Tüm Ürünler</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Campaigns" ? "active" : "")" asp-page="/Campaigns">Kampanyalar</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Page"]?.ToString() == "/NewArrivals" ? "active" : "")" asp-page="/NewArrivals">Yeni Gelenler</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="offcanvas offcanvas-end" tabindex="-1" id="mainOffcanvas" aria-labelledby="mainOffcanvasLabel">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title logo-text" id="mainOffcanvasLabel">DogukanStore</h5>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Kapat"></button>
        </div>
        <div class="offcanvas-body">
            <ul class="list-group list-group-flush mb-3 mobile-quick-actions">
                <li class="list-group-item">
                    @* data-bs-dismiss="offcanvas" kaldırıldı, modal açılınca JS ile kapatılacak *@
                    <a href="#" class="d-flex align-items-center text-decoration-none" data-bs-toggle="modal" data-bs-target="#searchModal">
                        <i class="fas fa-search fa-fw me-3"></i>Ara
                    </a>
                </li>
                <li class="list-group-item">
                    <a class="d-flex align-items-center text-decoration-none position-relative" asp-page="/Cart/Index">
                        @* data-bs-dismiss kaldırıldı *@
                        <i class="fas fa-shopping-bag fa-fw me-3"></i>Sepetim
                        <span id="cartItemCountLayoutMobile" class="badge rounded-pill bg-primary ms-auto">0</span>
                    </a>
                </li>
                @if (SignInManager.IsSignedIn(User))
                {
                    var currentUser = await UserManager.GetUserAsync(User);
                    <li class="list-group-item list-group-item-light text-muted small text-uppercase pt-3 pb-1 px-3">
                        <i class="fas fa-user-circle fa-fw me-2"></i>@(currentUser?.FirstName ?? UserManager.GetUserName(User))
                    </li>

                    <li class="list-group-item">
                        <a class="d-flex align-items-center text-decoration-none" asp-page="/Account/Dashboard">
                            @* data-bs-dismiss kaldırıldı *@
                            <i class="fas fa-tachometer-alt fa-fw me-3"></i>Hesabım Paneli
                        </a>
                    </li>
                    <li class="list-group-item"><a class="d-flex align-items-center text-decoration-none" asp-area="Identity" asp-page="/Account/Manage/Index"><i class="fas fa-user-edit fa-fw me-3"></i>Profil Ayarları</a></li>
                    <li class="list-group-item"><a class="d-flex align-items-center text-decoration-none" asp-page="/Order/History"><i class="fas fa-receipt fa-fw me-3"></i>Siparişlerim</a></li>
                    <li class="list-group-item"><a class="d-flex align-items-center text-decoration-none" asp-page="/Account/Favorites"><i class="fas fa-heart fa-fw me-3"></i>Favorilerim</a></li>
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="list-group-item"><a class="d-flex align-items-center text-decoration-none" asp-page="/Admin/Index"><i class="fas fa-user-shield fa-fw me-3"></i>Admin Paneli</a></li>
                    }
                    <li class="list-group-item">
                        <form asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })" method="post" class="d-inline w-100">
                            <button type="submit" class="btn btn-link text-danger p-0 d-flex align-items-center text-decoration-none w-100">
                                @* data-bs-dismiss kaldırıldı *@
                                <i class="fas fa-sign-out-alt fa-fw me-3"></i>Çıkış Yap
                            </button>
                        </form>
                    </li>
                }
                else
                {
                    <li class="list-group-item"><a class="d-flex align-items-center text-decoration-none" asp-area="Identity" asp-page="/Account/Login"><i class="fas fa-sign-in-alt fa-fw me-3"></i>Giriş Yap</a></li>
                    <li class="list-group-item"><a class="d-flex align-items-center text-decoration-none" asp-area="Identity" asp-page="/Account/Register"><i class="fas fa-user-plus fa-fw me-3"></i>Kayıt Ol</a></li>
                }
            </ul>

            <hr class="my-2 d-lg-none">

            <ul class="list-group list-group-flush main-mobile-nav">
                <li class="list-group-item"><a class="d-flex align-items-center text-decoration-none @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Index" ? "active" : "")" asp-page="/Index">Ana Sayfa</a></li>

                <li class="list-group-item">
                    <a class="d-flex align-items-center text-decoration-none dropdown-toggle @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Products/Index" && !string.IsNullOrEmpty(ViewContext.RouteData.Values["category"]?.ToString()) ? "active" : "")"
                       href="#categoriesOffcanvasCollapse" data-bs-toggle="collapse" role="button"
                       aria-expanded="false" aria-controls="categoriesOffcanvasCollapse">
                        Kategoriler
                    </a>
                    <div class="collapse mt-1" id="categoriesOffcanvasCollapse">
                        <ul class="list-group list-group-flush ps-3">
                            <li class="list-group-item border-0 py-1"><a class="d-block text-decoration-none ps-2 @(ViewContext.RouteData.Values["category"]?.ToString() == "Elektronik" ? "active" : "")" asp-page="/Products/Index" asp-route-category="Elektronik">Elektronik</a></li>
                            <li class="list-group-item border-0 py-1"><a class="d-block text-decoration-none ps-2 @(ViewContext.RouteData.Values["category"]?.ToString() == "Giyim" ? "active" : "")" asp-page="/Products/Index" asp-route-category="Giyim">Giyim</a></li>
                            <li class="list-group-item border-0 py-1"><a class="d-block text-decoration-none ps-2 @(ViewContext.RouteData.Values["category"]?.ToString() == "EvDekorasyon" ? "active" : "")" asp-page="/Products/Index" asp-route-category="EvDekorasyon">Ev & Dekorasyon</a></li>
                            <li class="list-group-item border-0 py-1"><hr class="my-1"></li>
                            <li class="list-group-item border-0 py-1"><a class="d-block text-decoration-none ps-2 @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Products/Index" && string.IsNullOrEmpty(ViewContext.RouteData.Values["category"]?.ToString()) ? "active" : "")" asp-page="/Products/Index">Tüm Ürünler</a></li>
                        </ul>
                    </div>
                </li>
                <li class="list-group-item"><a class="d-flex align-items-center text-decoration-none @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Campaigns" ? "active" : "")" asp-page="/Campaigns">Kampanyalar</a></li>
                <li class="list-group-item"><a class="d-flex align-items-center text-decoration-none @(ViewContext.RouteData.Values["Page"]?.ToString() == "/NewArrivals" ? "active" : "")" asp-page="/NewArrivals">Yeni Gelenler</a></li>
            </ul>
        </div>
    </div>

    <div class="main-wrapper">
        <div class="container content-container py-4 py-md-5">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="site-footer py-5 mt-auto">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-6 mb-4 mb-lg-0">
                    <h5 class="footer-heading">DogukanStore</h5>
                    <p class="footer-text">Modern ve kaliteli ürünlerin adresi. Müşteri memnuniyeti odaklı hizmet anlayışımızla yanınızdayız.</p>
                </div>
                <div class="col-lg-2 col-md-3 col-6 mb-4 mb-lg-0">
                    <h5 class="footer-heading">Keşfet</h5>
                    <ul class="list-unstyled footer-links">
                        <li><a asp-page="/Products/Index">Tüm Ürünler</a></li>
                        <li><a asp-page="/NewArrivals">Yeni Gelenler</a></li>
                        <li><a asp-page="/Campaigns">Kampanyalar</a></li>
                        <li><a href="#">Markalar</a></li>
                    </ul>
                </div>
                <div class="col-lg-2 col-md-3 col-6 mb-4 mb-lg-0">
                    <h5 class="footer-heading">Yardım</h5>
                    <ul class="list-unstyled footer-links">
                        <li><a href="/SSS">S.S.S.</a></li>
                        <li><a href="/returns-policy">İade Politikası</a></li>
                        <li><a href="#">Kargo Takibi</a></li>
                        <li><a asp-page="/Privacy">Gizlilik</a></li>
                    </ul>
                </div>
                <div class="col-lg-4 col-md-12 mb-4 mb-lg-0">
                    <h5 class="footer-heading">İletişimde Kalın</h5>
                    <p class="footer-text">Yeniliklerden ve özel indirimlerden haberdar olmak için bültenimize abone olun.</p>
                    <form class="newsletter-form d-flex">
                        <input type="email" class="form-control form-control-sm me-2" placeholder="E-posta adresiniz">
                        <button type="submit" class="btn btn-primary btn-sm">Abone Ol</button>
                    </form>
                    <div class="social-icons-footer mt-3">
                        <a href="#" title="Facebook"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" title="Instagram"><i class="fab fa-instagram"></i></a>
                        <a href="#" title="Twitter"><i class="fab fa-twitter"></i></a>
                        <a href="#" title="Pinterest"><i class="fab fa-pinterest-p"></i></a>
                    </div>
                </div>
            </div>
            <div class="text-center footer-copy mt-5 pt-4 border-top">
                &copy; @DateTime.Now.Year DogukanStore. Tasarım ve Geliştirme Sizin Tarafınızdan.
            </div>
        </div>
    </footer>

    <div class="modal fade" id="searchModal" tabindex="-1" aria-labelledby="searchModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header border-0">
                    <h5 class="modal-title" id="searchModalLabel">Ne Aramıştınız?</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form asp-page="/Products/Index" method="get" id="modalSearchForm">
                        <div class="input-group input-group-lg">
                            <input type="search" name="searchTerm" class="form-control" placeholder="Ürün, marka veya kategori..." aria-label="Arama" autofocus>
                            <button class="btn btn-primary px-4" type="submit"><i class="fas fa-search"></i></button>
                        </div>
                    </form>
                    <div class="mt-3 popular-searches">
                        <small class="text-muted">Popüler Aramalar:</small>
                        <a href="/Products/Index?searchTerm=elbise" class="badge bg-light text-dark">Elbise</a>
                        <a href="/Products/Index?searchTerm=ayakkabi" class="badge bg-light text-dark">Ayakkabı</a>
                        <a href="/Products/Index?searchTerm=saat" class="badge bg-light text-dark">Saat</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="loginOrRegisterToFavoriteModal" tabindex="-1" aria-labelledby="loginOrRegisterToFavoriteModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="loginOrRegisterToFavoriteModalLabel"><i class="fas fa-heart text-danger me-2"></i>Favorilere Ekleyin</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
                </div>
                <div class="modal-body text-center">
                    <p class="lead">Ürünleri favori listenize ekleyebilmek için lütfen giriş yapın veya yeni bir hesap oluşturun.</p>
                    <i class="fas fa-user-lock fa-3x text-primary my-3"></i>
                </div>
                <div class="modal-footer justify-content-center">
                    <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-primary">Giriş Yap</a>
                    <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-outline-secondary ms-2">Kayıt Ol</a>
                    @* <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button> *@
                </div>
            </div>
        </div>
    </div>

    <button onclick="scrollToTop()" id="scrollTopBtn" title="Yukarı Çık">
        <i class="fas fa-chevron-up"></i>
    </button>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
    @await RenderSectionAsync("ValidationScripts", required: false)
</body>
</html>