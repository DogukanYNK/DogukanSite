@page "{orderId:int}"
@model DogukanSite.Pages.Admin.OrderDetailsModel
@{
    // ViewData["Title"] PageModel'da set edildi.
    var statusColors = new Dictionary<string, string> { /* ... (ManageOrders.cshtml'deki gibi) ... */ };
    Layout = "_AdminLayout";
}

<div class="page-header d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="page-title display-6 mb-0">@ViewData["Title"]</h1>
        @if (Model.Order != null)
        {
            <small class="text-muted">Sipariş Tarihi: @Model.Order.OrderDate.ToString("dd MMMM yyyy, HH:mm")</small>
        }
    </div>
    <a asp-page="/Admin/ManageOrders" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-2"></i>Tüm Siparişlere Dön
    </a>
</div>

@if (Model.Order != null)
{
    <div class="row g-4">
        <div class="col-lg-8">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light py-3">
                    <h5 class="mb-0"><i class="fas fa-boxes me-2 text-primary"></i>Sipariş Edilen Ürünler</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th style="width: 80px;">Resim</th>
                                    <th>Ürün</th>
                                    <th class="text-center">Adet</th>
                                    <th class="text-end">Birim Fiyat</th>
                                    <th class="text-end">Toplam</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Order.Items)
                                {
                                    <tr>
                                        <td>
                                            <img src="@(string.IsNullOrEmpty(item.Product?.ImageUrl) ? "/images/placeholder-product-thumb.png" : item.Product?.ImageUrl)"
                                                 alt="@item.Product?.Name" class="img-fluid rounded" style="width: 50px; height: 50px; object-fit: cover;">
                                        </td>
                                        <td>
                                            <a asp-page="/Products/Index" asp-route-id="@item.ProductId" target="_blank" class="fw-semibold text-dark text-decoration-none">@item.Product?.Name</a>
                                            @if (!string.IsNullOrEmpty(item.Product?.Category))
                                            {
                                                <small class="d-block text-muted">Kategori: @item.Product.Category</small>
                                            }
                                        </td>
                                        <td class="text-center">@item.Quantity</td>
                                        <td class="text-end">@item.UnitPrice.ToString("C")</td>
                                        <td class="text-end fw-semibold">@((item.UnitPrice * item.Quantity).ToString("C"))</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr class="table-light">
                                    <td colspan="4" class="text-end fw-bold">Ara Toplam:</td>
                                    <td class="text-end fw-bold">@Model.Order.Items.Sum(i => i.UnitPrice * i.Quantity).ToString("C")</td>
                                </tr>
                                @* Kargo, İndirim vb. bilgiler Order modelinde varsa gösterilebilir *@
                                <tr class="table-light">
                                    <td colspan="4" class="text-end fw-bold fs-5">GENEL TOPLAM:</td>
                                    <td class="text-end fw-bold fs-5 text-primary">@Model.Order.OrderTotal.ToString("C")</td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light py-3">
                    <h5 class="mb-0"><i class="fas fa-user-tag me-2 text-primary"></i>Müşteri Bilgileri</h5>
                </div>
                <div class="card-body">
                    <p class="mb-1"><strong>Ad Soyad:</strong> @Model.Order.CustomerName</p>
                    @if (!string.IsNullOrEmpty(Model.Order.Email))
                    {
                        <p class="mb-1"><strong>E-posta:</strong> @Model.Order.Email</p>
                    }
                    @if (!string.IsNullOrEmpty(Model.Order.PhoneNumber))
                    {
                        <p class="mb-1"><strong>Telefon:</strong> @Model.Order.PhoneNumber</p>
                    }
                    @if (Model.Order.User != null)
                    {
                        <p class="mb-0 small text-muted">Kullanıcı ID: @Model.Order.UserId (<a href="#">Kullanıcıyı Gör</a>)</p>
                    }
                    else
                    {
                        <p class="mb-0 small text-muted">(Misafir Siparişi)</p>
                    }
                </div>
            </div>

            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light py-3">
                    <h5 class="mb-0"><i class="fas fa-truck me-2 text-primary"></i>Teslimat Bilgileri</h5>
                </div>
                <div class="card-body">
                    <p>@Html.Raw(Model.Order.ShippingAddress?.Replace("\n", "<br />"))</p>
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-header bg-light py-3">
                    <h5 class="mb-0"><i class="fas fa-clipboard-check me-2 text-primary"></i>Sipariş Durumu</h5>
                </div>
                <div class="card-body">
                    @{
                        var currentStatusClass = "bg-secondary";
                        if (!string.IsNullOrEmpty(Model.Order.OrderStatus) && statusColors.ContainsKey(Model.Order.OrderStatus.ToLower()))
                        {
                            currentStatusClass = statusColors[Model.Order.OrderStatus.ToLower()];
                        }
                    }
                    <p class="mb-2">Mevcut Durum: <span class="badge rounded-pill @currentStatusClass fs-6">@Model.Order.OrderStatus</span></p>

                    <form method="post" asp-page="/Admin/ManageOrders" asp-page-handler="UpdateStatus" asp-route-orderId="@Model.Order.Id" class="mt-3">
                        <div class="input-group">
                            <select name="newStatus" class="form-select form-select-sm">
                                <option value="">Yeni Durum Seçin...</option>
                                <option value="Pending" selected="@(Model.Order.OrderStatus == "Pending")">Beklemede</option>
                                <option value="Processing" selected="@(Model.Order.OrderStatus == "Processing")">Hazırlanıyor</option>
                                <option value="Shipped" selected="@(Model.Order.OrderStatus == "Shipped")">Kargolandı</option>
                                <option value="Delivered" selected="@(Model.Order.OrderStatus == "Delivered")">Teslim Edildi</option>
                                <option value="Cancelled" selected="@(Model.Order.OrderStatus == "Cancelled")">İptal Edildi</option>
                            </select>
                            <button type="submit" class="btn btn-sm btn-outline-primary">Güncelle</button>
                        </div>
                    </form>
                    @if (!string.IsNullOrEmpty(Model.Order.OrderNotes))
                    {
                        <hr class="my-3">
                        <h6>Sipariş Notları:</h6>
                        <p class="small text-muted"><em>@Model.Order.OrderNotes</em></p>
                    }
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-danger text-center">Sipariş bulunamadı veya görüntüleme yetkiniz yok.</div>
}
