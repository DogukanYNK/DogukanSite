@page "{id:int}"
@model DogukanSite.Pages.Admin.EditCouponModel
@{
    ViewData["Title"] = "Kuponu Düzenle";
    Layout = "_AdminLayout";
}

<div class="container mt-4 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="page-header mb-4">
                <h1 class="page-title display-6">@ViewData["Title"]</h1>
                <p class="lead text-muted">"@Model.Coupon.Code"</p>
            </div>

            <div class="card shadow-sm">
                <div class="card-body p-4 p-md-5">
                    <form method="post">
                        <input type="hidden" asp-for="Coupon.Id" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Coupon.Code" class="form-label"></label>
                            <input asp-for="Coupon.Code" class="form-control" />
                            <span asp-validation-for="Coupon.Code" class="text-danger small"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Coupon.Description" class="form-label"></label>
                            <input asp-for="Coupon.Description" class="form-control" />
                            <span asp-validation-for="Coupon.Description" class="text-danger small"></span>
                        </div>
                        <div class="row g-2 mb-3">
                            <div class="col-6">
                                <label asp-for="Coupon.DiscountType" class="form-label"></label>
                                <select asp-for="Coupon.DiscountType" asp-items="Html.GetEnumSelectList<Models.DiscountType>()" class="form-select"></select>
                            </div>
                            <div class="col-6">
                                <label asp-for="Coupon.Amount" class="form-label">Değer</label>
                                <input asp-for="Coupon.Amount" class="form-control" type="text" />
                            </div>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Coupon.MinimumSpend" class="form-label">Minimum Harcama (₺)</label>
                            <input asp-for="Coupon.MinimumSpend" class="form-control" type="text" />
                        </div>
                        <div class="mb-3">
                            <label asp-for="Coupon.ExpiryDate" class="form-label">Son Kullanma Tarihi</label>
                            <input asp-for="Coupon.ExpiryDate" class="form-control" type="date" />
                        </div>
                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" asp-for="Coupon.IsActive">
                            <label class="form-check-label" asp-for="Coupon.IsActive">Kupon Aktif mi?</label>
                        </div>

                        <hr class="my-4">
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-page="./ManageCoupons" class="btn btn-outline-secondary">Vazgeç</a>
                            <button type="submit" class="btn btn-primary px-4"><i class="fas fa-save me-2"></i>Değişiklikleri Kaydet</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>