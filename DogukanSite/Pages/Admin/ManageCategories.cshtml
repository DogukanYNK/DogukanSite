@page
@model DogukanSite.Pages.Admin.ManageCategoriesModel
@{
    ViewData["Title"] = "Kategorileri Yönet";
    Layout = "_AdminLayout";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">@ViewData["Title"]</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-page="/Admin/Index">Yönetim Paneli</a></li>
        <li class="breadcrumb-item active">Kategorileri Yönet</li>
    </ol>

    <div class="row">
        <div class="col-lg-4 mb-4">
            <div class="card">
                <div class="card-header">
                    <i class="fas fa-plus me-1"></i>
                    Yeni Kategori Ekle
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>
                        <div class="form-floating mb-3">
                            <input asp-for="NewCategory.Name" class="form-control" placeholder="Kategori Adı" />
                            <label asp-for="NewCategory.Name">Kategori Adı</label>
                            <span asp-validation-for="NewCategory.Name" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <textarea asp-for="NewCategory.Description" class="form-control" placeholder="Açıklama" style="height: 100px;"></textarea>
                            <label asp-for="NewCategory.Description">Açıklama</label>
                            <span asp-validation-for="NewCategory.Description" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <select asp-for="NewCategory.ParentCategoryId" asp-items="Model.CategorySelectList" class="form-select">
                                <option value="0">-- Ana Kategori (Üst Kategorisi Yok) --</option>
                            </select>
                            <label asp-for="NewCategory.ParentCategoryId">Üst Kategori</label>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Kategoriyi Kaydet
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <i class="fas fa-tags me-1"></i>
                    Mevcut Kategoriler
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>ID</th>
                                    <th>Kategori Adı</th>
                                    <th>Üst Kategorisi</th>
                                    <th>Ürün Sayısı</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Categories)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.Name</td>
                                        <td>
                                            @if (item.ParentCategory != null)
                                            {
                                                <span class="badge bg-secondary">@item.ParentCategory.Name</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-info">Ana Kategori</span>
                                            }
                                        </td>
                                        <td>@item.Products.Count</td>
                                        <td>
                                            <a asp-page="./EditCategory" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" title="Düzenle">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            @* Silme butonu için ileride bir modal onayı eklenebilir *@
                                            <a asp-page-handler="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Sil" onclick="return confirm('Bu kategoriyi silmek istediğinizden emin misiniz?')">
                                                <i class="fas fa-trash-alt"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>