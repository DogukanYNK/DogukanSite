@page
@model DogukanSite.Pages.Admin.AddProductModel
@{
    ViewData["Title"] = "Ürün Ekle";
}

<h2>Yeni Ürün Ekle</h2>

<form method="post">
    <div class="form-group">
        <label>Ürün Adı</label>
        <input type="text" asp-for="Product.Name" class="form-control" />
    </div>
    <div class="form-group">
        <label>Açıklama</label>
        <textarea asp-for="Product.Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label>Fiyat</label>
        <input type="number" asp-for="Product.Price" step="0.01" class="form-control" />
    </div>
    <div class="form-group">
        <label>Kategori</label>
        <input type="text" asp-for="Product.Category" class="form-control" />
    </div>
    <div class="form-group">
        <label>Resim URL</label>
        <input type="text" asp-for="Product.ImageUrl" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success mt-3">Ürünü Kaydet</button>
</form>
