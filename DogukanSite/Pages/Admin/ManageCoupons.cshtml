@page
@model DogukanSite.Pages.Admin.ManageCouponsModel
@{
    ViewData["Title"] = "İndirim Kuponlarını Yönet";
    Layout = "_AdminLayout";
}

<div class="page-header d-flex flex-wrap justify-content-between align-items-center mb-4 border-bottom pb-3">
    <h1 class="page-title display-6 mb-2 mb-md-0">@ViewData["Title"]</h1>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">@TempData["SuccessMessage"]<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button></div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">@TempData["ErrorMessage"]<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button></div>
}

<div class="row g-4">
    <div class="col-lg-8">
        <div class="card shadow-sm">
            <div class="card-header bg-light"><h5 class="mb-0">Mevcut Kuponlar</h5></div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0 admin-table">
                        <thead>
                            <tr>
                                <th>Kod</th>
                                <th>Açıklama</th>
                                <th>Tür</th>
                                <th class="text-end">Değer</th>
                                <th class="text-center">Aktif mi?</th>
                                <th class="text-end">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var coupon in Model.Coupons)
                            {
                                <tr>
                                    <td><strong class="text-primary">@coupon.Code</strong></td>
                                    <td>@coupon.Description</td>
                                    <td>@(coupon.DiscountType == Models.DiscountType.Percentage ? "Yüzde" : "Sabit Tutar")</td>
                                    <td class="text-end fw-semibold">
                                        @if (coupon.DiscountType == Models.DiscountType.Percentage)
                                        {
                                            <span>%@coupon.Amount.ToString("F0")</span>
                                        }
                                        else
                                        {
                                            <span>@coupon.Amount.ToString("C")</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        @if (coupon.IsActive)
                                        {
                                            <span class="badge bg-success">Aktif</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Pasif</span>
                                        }
                                    </td>
                                    <td class="text-end">
                                        <a asp-page="./EditCoupon" asp-route-id="@coupon.Id" class="btn btn-sm btn-outline-secondary me-1" title="Düzenle"><i class="fas fa-edit"></i></a>
                                        <form method="post" asp-page-handler="Delete" asp-route-id="@coupon.Id" class="d-inline" onsubmit="return confirm('@coupon.Code kuponunu silmek istediğinizden emin misiniz?')">
                                            <button type="submit" class="btn btn-sm btn-outline-danger" title="Sil"><i class="fas fa-trash-alt"></i></button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="card shadow-sm">
            <div class="card-header bg-light"><h5 class="mb-0">Yeni Kupon Ekle</h5></div>
            <div class="card-body">
                <form method="post" asp-page-handler="Add">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger small p-2"></div>
                    <div class="mb-3">
                        <label asp-for="NewCoupon.Code" class="form-label"></label>
                        <input asp-for="NewCoupon.Code" class="form-control" />
                        <span asp-validation-for="NewCoupon.Code" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="NewCoupon.Description" class="form-label"></label>
                        <input asp-for="NewCoupon.Description" class="form-control" />
                        <span asp-validation-for="NewCoupon.Description" class="text-danger small"></span>
                    </div>
                    <div class="row g-2 mb-3">
                        <div class="col-6">
                            <label asp-for="NewCoupon.DiscountType" class="form-label"></label>
                            <select asp-for="NewCoupon.DiscountType" asp-items="Model.DiscountTypes" class="form-select"></select>
                        </div>
                        <div class="col-6">
                            <label asp-for="NewCoupon.Amount" class="form-label">Değer</label>
                            <input asp-for="NewCoupon.Amount" class="form-control" type="text" />
                        </div>
                    </div>
                    <div class="mb-3">
                        <label asp-for="NewCoupon.MinimumSpend" class="form-label">Minimum Harcama (₺)</label>
                        <input asp-for="NewCoupon.MinimumSpend" class="form-control" type="text" value="0" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="NewCoupon.ExpiryDate" class="form-label">Son Kullanma Tarihi</label>
                        <input asp-for="NewCoupon.ExpiryDate" class="form-control" type="date" />
                    </div>
                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" asp-for="NewCoupon.IsActive">
                        <label class="form-check-label" asp-for="NewCoupon.IsActive">Kupon Aktif mi?</label>
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary"><i class="fas fa-plus me-2"></i>Kuponu Ekle</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>