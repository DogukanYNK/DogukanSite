@page
@model DogukanSite.Pages.Account.EditProfileModel
@{
    ViewData["Title"] = "Profilimi Düzenle";
    Layout = "_AccountLayout"; // Sol menülü ana hesap layout'umuzu kullanıyoruz
}

<partial name="_ProfileNav" />

<h1 class="display-6 mb-3">@ViewData["Title"]</h1>
<p class="lead text-muted mb-4">Bu sayfadan kişisel bilgilerinizi güncelleyebilirsiniz.</p>

<div class="card shadow-sm">
    <div class="card-body p-4">

        @if (!string.IsNullOrEmpty(Model.StatusMessage))
        {
            var statusMessageClass = Model.StatusMessage.ToLower().Contains("hata") ? "danger" : "success";
            <div class="alert alert-@statusMessageClass alert-dismissible fade show" role="alert">
                @Model.StatusMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Kapat"></button>
            </div>
        }

        <form id="edit-profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <div class="row g-3">
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="Input.FirstName" class="form-control" placeholder="Adınız" />
                        <label asp-for="Input.FirstName"></label>
                    </div>
                    <span asp-validation-for="Input.FirstName" class="text-danger small ms-2"></span>
                </div>

                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="Input.LastName" class="form-control" placeholder="Soyadınız" />
                        <label asp-for="Input.LastName"></label>
                    </div>
                    <span asp-validation-for="Input.LastName" class="text-danger small ms-2"></span>
                </div>
            </div>

            <div class="mt-3">
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" placeholder="E-posta Adresiniz" readonly />
                    <label asp-for="Input.Email"></label>
                </div>
                <small class="form-text text-muted ms-2">E-posta adresiniz güvenlik nedeniyle bu alandan değiştirilemez.</small>
            </div>

            <div class="mt-3">
                <div class="form-floating">
                    <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Telefon Numaranız" />
                    <label asp-for="Input.PhoneNumber"></label>
                </div>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger small ms-2"></span>
            </div>

            <div class="mt-4">
                <button id="update-profile-button" type="submit" class="btn btn-primary w-100 btn-lg">
                    <i class="fas fa-save me-2"></i>Değişiklikleri Kaydet
                </button>
            </div>
        </form>

    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}