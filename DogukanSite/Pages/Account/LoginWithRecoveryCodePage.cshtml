@page
@model DogukanSite.Pages.Account.LoginWithRecoveryCodePageModel
@{
    ViewData["Title"] = "Kurtarma Kodu ile Giriş";
    Layout = "_AuthLayout";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6 col-xl-5">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-body p-4 p-md-5">
                    <div class="text-center mb-4">
                        <i class="fas fa-life-ring fa-3x text-primary mb-3"></i>
                        <h3 class="fw-bold mb-2">@ViewData["Title"]</h3>
                        <p class="text-muted small">Hesabınıza erişmek için daha önce kaydettiğiniz kurtarma kodlarınızdan birini girin.</p>
                    </div>

                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger text-start p-2 small" role="alert"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.RecoveryCode" class="form-control" autocomplete="off" placeholder="Kurtarma Kodu" autofocus />
                            <label asp-for="Input.RecoveryCode"></label>
                            <span asp-validation-for="Input.RecoveryCode" class="text-danger small ms-2"></span>
                        </div>

                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-primary btn-lg">Giriş Yap</button>
                        </div>

                        <div class="text-center small">
                            <p class="mb-0">
                                <a asp-page="./LoginWith2faPage" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none">
                                    <i class="fas fa-qrcode me-1"></i>Doğrulama uygulaması ile giriş yap
                                </a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}