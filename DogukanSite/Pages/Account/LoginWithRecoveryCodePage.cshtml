@page
@model DogukanSite.Pages.Account.LoginWithRecoveryCodePageModel
@{
    ViewData["Title"] = "Kurtarma Kodu ile Giriş";
    Layout = "_AuthLayout";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6 col-xl-5">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-body p-4 p-md-5">
                    <div class="text-center mb-4 pt-2">
                        <h3 class="fw-bold text-primary mb-2">@ViewData["Title"]</h3>
                        <p class="text-muted small">Hesabınıza erişmek için kurtarma kodlarınızdan birini girin.</p>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.ErrorMessage) || !ViewData.ModelState.IsValid)
                    {
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger text-start mb-3" role="alert"></div>
                    }
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage) && ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger text-start mb-3" role="alert">@Model.ErrorMessage</div>
                    }

                    <form method="post" asp-route-returnUrl="@Model.ReturnUrl">
                        <div class="form-floating mb-3">
                            <input asp-for="Input.RecoveryCode" class="form-control" autocomplete="off" placeholder="Kurtarma Kodu" autofocus />
                            <label asp-for="Input.RecoveryCode"><i class="fas fa-shield-virus me-2"></i></label>
                            <span asp-validation-for="Input.RecoveryCode" class="text-danger small"></span>
                        </div>

                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-check-circle me-2"></i>Giriş Yap
                            </button>
                        </div>
                        <div class="text-center small">
                            <p class="mb-0">
                                <a asp-page="./LoginWith2faPage" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none">
                                    <i class="fas fa-qrcode me-1"></i>Doğrulama uygulaması ile giriş yap
                                </a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}