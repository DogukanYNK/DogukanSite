@page
@model DogukanSite.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Yeni Hesap Oluştur";
    Layout = "_AuthLayout";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6 col-xl-5">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-body p-4 p-md-5">
                    <div class="text-center mb-4">
                        <i class="fas fa-user-plus fa-3x text-primary mb-3"></i>
                        <h3 class="fw-bold mb-2">@ViewData["Title"]</h3>
                        <p class="text-muted">Hızlıca aramıza katılın!</p>
                    </div>

                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger text-start p-2 small" role="alert"></div>

                        <div class="row g-2">
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="Input.FirstName" class="form-control" placeholder="Adınız" />
                                    <label asp-for="Input.FirstName"></label>
                                    <span asp-validation-for="Input.FirstName" class="text-danger small ms-2"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="Input.LastName" class="form-control" placeholder="Soyadınız" />
                                    <label asp-for="Input.LastName"></label>
                                    <span asp-validation-for="Input.LastName" class="text-danger small ms-2"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" placeholder="ornek@eposta.com" autocomplete="email" />
                            <label asp-for="Input.Email"></label>
                            <span asp-validation-for="Input.Email" class="text-danger small ms-2"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control" placeholder="Şifreniz" autocomplete="new-password" />
                            <label asp-for="Input.Password"></label>
                            <span asp-validation-for="Input.Password" class="text-danger small ms-2"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Şifrenizi Tekrar Girin" autocomplete="new-password" />
                            <label asp-for="Input.ConfirmPassword"></label>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger small ms-2"></span>
                        </div>

                        <div class="form-check mb-3">
                            <input asp-for="Input.AgreeToTerms" class="form-check-input" />
                            <label asp-for="Input.AgreeToTerms" class="form-check-label small">
                                <a href="/Privacy" target="_blank" class="text-decoration-none">Kullanıcı Sözleşmesini</a> okudum ve kabul ediyorum.
                            </label>
                            <span asp-validation-for="Input.AgreeToTerms" class="text-danger d-block small"></span>
                        </div>

                        <div class="d-grid mb-3">
                            <button id="registerSubmit" type="submit" class="btn btn-primary btn-lg">Hesap Oluştur</button>
                        </div>

                        <hr class="my-4">

                        <div class="text-center">
                            <p class="mb-0 small">
                                Zaten bir hesabınız var mı?
                                <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="fw-semibold text-decoration-none">Giriş Yapın!</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}