@page
@model DogukanSite.Pages.Account.ConfirmEmailPageModel
@{
    ViewData["Title"] = "E-posta Onayı";
    Layout = "_AuthLayout"; // Sade layout doğru bir seçim
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm border-0 rounded-lg">
                <div class="card-body p-4 p-md-5 text-center">

                    @if (Model.StatusMessage != null && !Model.StatusMessage.StartsWith("Hata:"))
                    {
                        <i class="fas fa-check-circle fa-4x text-success mb-3"></i>
                        <h1 class="h3">@ViewData["Title"] Başarılı!</h1>
                        <p class="text-muted">@Model.StatusMessage</p>
                        <a asp-page="/Account/Login" class="btn btn-primary mt-3">
                            <i class="fas fa-sign-in-alt me-2"></i>Giriş Yap Sayfasına Git
                        </a>
                    }
                    else
                    {
                        <i class="fas fa-times-circle fa-4x text-danger mb-3"></i>
                        <h1 class="h3">@ViewData["Title"] Başarısız!</h1>
                        <p class="text-muted">@Model.StatusMessage</p>
                        <a asp-page="/Index" class="btn btn-outline-secondary mt-3">
                            <i class="fas fa-home me-2"></i>Ana Sayfaya Dön
                        </a>
                    }

                </div>
            </div>
        </div>
    </div>
</div>