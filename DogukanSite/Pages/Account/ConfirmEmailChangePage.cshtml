@page
@model DogukanSite.Pages.Account.ConfirmEmailChangePageModel
@{
    ViewData["Title"] = "E-posta Değişikliği Onayı";
    Layout = "_AuthLayout";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm border-0 rounded-lg">
                <div class="card-body p-4 p-md-5 text-center">

                    @if (Model.StatusMessage != null && !Model.StatusMessage.StartsWith("Hata:"))
                    {
                        <i class="fas fa-envelope-circle-check fa-4x text-success mb-3"></i>
                        <h1 class="h3">Değişiklik Onaylandı!</h1>
                        <p class="text-muted">@Model.StatusMessage</p>
                        <a asp-page="/Account/Dashboard" class="btn btn-primary mt-3">
                            <i class="fas fa-user-circle me-2"></i>Hesabım Sayfasına Git
                        </a>
                    }
                    else
                    {
                        <i class="fas fa-exclamation-triangle fa-4x text-danger mb-3"></i>
                        <h1 class="h3">Onay Başarısız!</h1>
                        <p class="text-muted">@Model.StatusMessage</p>
                        <a asp-page="/Index" class="btn btn-outline-secondary mt-3">
                            <i class="fas fa-home me-2"></i>Ana Sayfaya Dön
                        </a>
                    }

                </div>
            </div>
        </div>
    </div>
</div>