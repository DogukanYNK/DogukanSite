@page
@model DogukanSite.Pages.Account.PersonalDataPageModel
@{
    ViewData["Title"] = "Kişisel Veriler";
    Layout = "_AccountLayout"; // LAYOUT DEĞİŞTİRİLDİ
}

@* YENİ EKLENEN SEKME MENÜSÜ *@
<partial name="_ProfileNav" />

<div class="card shadow-sm">
    <div class="card-body p-4">
        <p class="text-muted">Bu sayfa, hesabınızla ilgili olarak sakladığımız verileri indirmenize ve hesabınızı kalıcı olarak silmenize olanak tanır.</p>

        <hr class="my-4">

        <div>
            <h5 class="mb-3">Verilerinizi İndirin</h5>
            <form id="download-data" asp-page-handler="Download" method="post">
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-download me-2"></i>Verilerimi İndir
                </button>
            </form>
        </div>

        <hr class="my-4">

        <div>
            <h5 class="mb-3 text-danger">Hesabınızı Silin</h5>
            <div class="alert alert-warning" role="alert">
                <p class="fw-bold mb-0"><i class="fas fa-exclamation-triangle me-2"></i>Bu işlem hesabınızı kalıcı olarak silecektir ve bu işlem geri alınamaz!</p>
            </div>
            <form id="delete-user" method="post" asp-page-handler="Delete">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>
                @if (Model.DeleteInput != null)
                {
                    <div class="form-floating mb-3">
                        <input asp-for="DeleteInput.Password" class="form-control" autocomplete="current-password" placeholder="Lütfen şifrenizi girin." />
                        <label asp-for="DeleteInput.Password"></label>
                        <span asp-validation-for="DeleteInput.Password" class="text-danger"></span>
                    </div>
                }
                <button class="btn btn-danger w-100" type="submit">
                    <i class="fas fa-trash-alt me-2"></i>Hesabımı Kalıcı Olarak Sil
                </button>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}