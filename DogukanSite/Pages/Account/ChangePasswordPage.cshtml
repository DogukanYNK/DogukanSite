@page
@model DogukanSite.Pages.Account.ChangePasswordPageModel
@{
    ViewData["Title"] = "Şifre Değiştir";
    Layout = "_AuthLayout";
}

<div class="container my-lg-5 my-4">
    <div class="page-header text-center mb-4">
        <h1 class="page-title display-5">@ViewData["Title"]</h1>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-10 col-xl-9">
            <div class="card shadow-sm border-0 rounded-lg">
                <div class="card-body p-4 p-md-5">
                    <div class="row g-4">
                        <div class="col-md-4">
                            @* Dashboard Navigasyonu (isteğe bağlı, veya sadeleştirilmiş) *@
                            <div class="list-group dashboard-nav">
                                <a asp-page="/Account/Dashboard" class="list-group-item list-group-item-action">
                                    <i class="fas fa-arrow-left me-2"></i>Hesabıma Dön
                                </a>
                                <a asp-page="/Account/EditProfile" class="list-group-item list-group-item-action">
                                    <i class="fas fa-user-edit me-2"></i>Profilimi Düzenle
                                </a>
                                <a asp-page="/Account/ChangePasswordPage" class="list-group-item list-group-item-action active">
                                    @* Bu sayfa aktif *@
                                    <i class="fas fa-key me-2"></i>Şifre Değiştir
                                </a>
                                @* Diğer özel yönetim sayfalarınıza linkler eklenebilir *@
                            </div>
                        </div>

                        <div class="col-md-8">
                            @if (!string.IsNullOrEmpty(Model.StatusMessage))
                            {
                                var statusMessageClass = Model.StatusMessage.StartsWith("Hata:") ? "danger" : "success";
                                <div class="alert alert-@statusMessageClass alert-dismissible fade show" role="alert">
                                    @Model.StatusMessage
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                            }

                            @if (!Model.HasPassword && User.Identity.IsAuthenticated) // Model.HasPassword OnGet'te set ediliyor
                            {
                                <div class="alert alert-warning" role="alert">
                                    Bu hesapla ilişkilendirilmiş yerel bir şifre bulunmamaktadır. Şifre eklemek veya yönetmek için lütfen <a asp-page="/Account/Manage/SetPassword" asp-area="Identity" class="alert-link">buraya tıklayın</a> (Eğer SetPassword sayfası scaffold edildiyse). Alternatif olarak, şifrenizi harici giriş yaptığınız platform (örn: Google, Facebook) üzerinden değiştirebilirsiniz.
                                </div>
                            }
                            else
                            {
                                <h4 class="mb-3">Yeni Şifrenizi Belirleyin</h4>
                                <hr class="my-3">
                                <form id="change-password-form" method="post">
                                    <div asp-validation-summary="ModelOnly" class="alert alert-danger text-start" role="alert"></div>

                                    <div class="form-floating mb-3">
                                        <input asp-for="Input.OldPassword" class="form-control" placeholder="Mevcut Şifreniz" />
                                        <label asp-for="Input.OldPassword"><i class="fas fa-unlock-alt me-2"></i></label>
                                        <span asp-validation-for="Input.OldPassword" class="text-danger small"></span>
                                    </div>
                                    <div class="form-floating mb-3">
                                        <input asp-for="Input.NewPassword" class="form-control" placeholder="Yeni Şifreniz" />
                                        <label asp-for="Input.NewPassword"><i class="fas fa-lock me-2"></i></label>
                                        <span asp-validation-for="Input.NewPassword" class="text-danger small"></span>
                                    </div>
                                    <div class="form-floating mb-3">
                                        <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Yeni Şifreyi Doğrulayın" />
                                        <label asp-for="Input.ConfirmPassword"><i class="fas fa-redo-alt me-2"></i></label>
                                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                                    </div>
                                    <div class="d-grid mt-4">
                                        <button type="submit" class="btn btn-primary btn-lg">
                                            <i class="fas fa-key me-2"></i>Şifreyi Değiştir
                                        </button>
                                    </div>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}