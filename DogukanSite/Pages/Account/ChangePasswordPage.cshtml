@page
@model DogukanSite.Pages.Account.ChangePasswordPageModel
@{
    ViewData["Title"] = "Şifre Değiştir";
    Layout = "_AccountLayout";
}

@* GÜVENLİK SEKME MENÜSÜ *@
<partial name="_SecurityNav" />

<div class="card shadow-sm">
    <div class="card-body p-4">

        @if (!string.IsNullOrEmpty(Model.StatusMessage))
        {
            var statusMessageClass = Model.StatusMessage.StartsWith("Hata:") ? "danger" : "success";
            <div class="alert alert-@statusMessageClass alert-dismissible fade show" role="alert">
                @Model.StatusMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Kapat"></button>
            </div>
        }

        <form id="change-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger text-start" role="alert"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.OldPassword" class="form-control" placeholder="Mevcut Şifreniz" autocomplete="current-password" aria-required="true" />
                <label asp-for="Input.OldPassword"></label>
                <span asp-validation-for="Input.OldPassword" class="text-danger small ms-2"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.NewPassword" class="form-control" placeholder="Yeni Şifreniz" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.NewPassword"></label>
                <span asp-validation-for="Input.NewPassword" class="text-danger small ms-2"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Yeni Şifreyi Doğrulayın" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger small ms-2"></span>
            </div>
            <div class="d-grid mt-4">
                <button type="submit" class="btn btn-primary btn-lg">
                    <i class="fas fa-key me-2"></i>Şifreyi Değiştir
                </button>
            </div>
        </form>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}