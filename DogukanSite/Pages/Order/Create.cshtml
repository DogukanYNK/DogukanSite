@page
@model DogukanSite.Pages.Order.CreateModel
@{
    ViewData["Title"] = "Siparişi Tamamla";
}

<h2>Siparişi Tamamla</h2>

<form method="post">
    <div class="form-group">
        <label>Ad Soyad</label>
        <input asp-for="CustomerName" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Adres</label>
        <textarea asp-for="Address" class="form-control" required></textarea>
    </div>
    <h4>Sepetiniz</h4>
    <ul>
        @foreach (var item in Model.CartItems)
        {
            <li>@item.Product.Name - @item.Quantity x @item.Product.Price.ToString("C")</li>
        }
    </ul>
    <p><strong>Toplam:</strong> @Model.Total.ToString("C")</p>
    <button type="submit" class="btn btn-success mt-3">Siparişi Gönder</button>
</form>

