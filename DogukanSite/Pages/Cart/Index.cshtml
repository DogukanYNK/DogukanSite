@page
@model DogukanSite.Pages.Cart.IndexModel
@{
}
<h2>Sepetiniz</h2>

@if (Model.Items.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Ürün</th>
                <th>Adet</th>
                <th>Fiyat</th>
                <th>Toplam</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.Product.Name</td>
                <td>@item.Quantity</td>
                <td>@item.Product.Price.ToString("C")</td>
                <td>@(item.Product.Price * item.Quantity).ToString("C")</td>
                <td>
                    <form method="post" asp-page-handler="Remove">
                        <input type="hidden" name="id" value="@item.Id" />
                        <button class="btn btn-danger">Kaldır</button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
    <p><strong>Toplam Tutar:</strong> @Model.Total.ToString("C")</p>
    <a href="/Order/Create" class="btn btn-success">Siparişi Tamamla</a>
}
else
{
    <p>Sepetiniz boş.</p>
}

